

<%= form_tag(search_path, :method => "get") do %>
    <%= label_tag(:term, "What are you searching for?:") %>
    <%= text_field_tag(:term, nil, :placeholder => "e.g. coffee") %>
    <br/>
    <%= label_tag(:location, "Tell me your location!") %>
    <%= text_field_tag(:location, nil, :placeholder => "e.g. Salzburg") %>
    <br/>
    <%= label_tag(:latitude, "Whats your latitude?") %>
    <%= text_field_tag(:latitude, nil, :placeholder => "e.g. 47.799917") %>
    <br/>
    <%= label_tag(:longitude, "Whats your longitude?") %>
    <%= text_field_tag(:longitude, nil, :placeholder => "e.g. 13.041849") %>
    <br/>
    <%= submit_tag("Let the magic happen!") %>
<% end %>
